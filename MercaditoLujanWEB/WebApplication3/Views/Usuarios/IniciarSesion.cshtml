@model MercaditoLujanWEB.Entities.Usuarios

@{
    ViewData["Title"] = "IniciarSesion";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}

<section>
    <div class="container">
        <div class="row justify-content-center" style="margin-top:15%;">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-3">
                            <a href="">
                                <img src="https://scontent.fsjo14-1.fna.fbcdn.net/v/t39.30808-6/428340757_904621325000940_4023345494659820788_n.jpg?_nc_cat=110&ccb=1-7&_nc_sid=5f2048&_nc_aid=0&_nc_ohc=Ra9bhcLgc7gQ7kNvgFJNBdr&_nc_ht=scontent.fsjo14-1.fna&oh=00_AYCybqcH5spyyxgA7JBDkvZW5QPNGMh7jdLYHT4T-GUxLw&oe=665AEDF0" width="130" height="120">
                            </a>
                        </div>
                        @using (Html.BeginForm("IniciarSesion", "Usuarios", FormMethod.Post))
                        {
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        @Html.LabelFor(m => m.Correo, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @type = "Email", @name = "email", @id = "email", @required = "true" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        @Html.LabelFor(m => m.Contrasenna, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", @type = "Password", @name = "password", @id = "password", @required = "true" })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex gap-2 justify-content-between">
                                        <a href="@Url.Action("RecuperarAcceso","Usuarios")" class="link-primary text-decoration-none">Olvidó su contraseña?</a>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-primary btn-lg" type="submit" style="color:white;">Iniciar Sesión</button>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <p class="m-0 text-secondary text-center">No tiene una cuenta? <a href="@Url.Action("RegistrarUsuario","Usuarios")" class="link-primary text-decoration-none"> Registrarse</a></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>